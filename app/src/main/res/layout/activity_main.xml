<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

   <ImageView
       android:id="@+id/img_01"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@mipmap/ic_launcher"
       android:layout_gravity="center"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="渐变的动画效果"
        android:id="@+id/bt_jianbian"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缩放的动画效果"
        android:id="@+id/bt_suofang"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位移的动画效果"
        android:id="@+id/bt_weiyi"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旋转的动画效果"
        android:id="@+id/bt_xuanzhuan"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="代码实现的动画效果"
        android:id="@+id/bt_daima"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转页面"
        android:id="@+id/bt_tiaozhuan"/>

</LinearLayout>
